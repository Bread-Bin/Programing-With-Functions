def basal_metabolic_rate(gender, weight, height, age):
    
    while True:
        if gender == M:
            kcals_per_day = 88.362 + (13.397 * weight) + (4.799 * height) - (5.677 * age)
        elif gender == F:
            kcals_per_day = 447.593 + (9.247 * weight) + (3.098 * height) - (4.330 * age)

    return kcals_per_day


